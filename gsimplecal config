# sample gsimplecal config file
# to be copied to $XDG_CONFIG_HOME/gsimplecal/config 
# (usually, it will be ~/.config/gsimplecal/config)
# change the xoffset and yoffeset to make gsimplecal to appear at your location in screen

show_calendar = 1
show_timezones = 1
show_week_numbers = 1
mark_today = 1
close_on_unfocus = 1
external_viewer = iceowl -showdate "%Y-%m-%d"
clock_format = %a %d %b %H:%M
mainwindow_decorated = 0
mainwindow_keep_above =0
mainwindow_sticky = 1
mainwindow_skip_taskbar =0
mainwindow_resizable = 0
mainwindow_position = bottom
mainwindow_xoffset = 1200
mainwindow_yoffset = 627
clock_label = UTC
clock_tz = :UTC
clock_label = Local
clock_tz =
